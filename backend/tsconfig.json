{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment
    "target": "ES2020",
    "module": "CommonJS", 
    "lib": ["ES2020"],
    "types": ["node", "express"],

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Type safety
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // Module resolution
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
